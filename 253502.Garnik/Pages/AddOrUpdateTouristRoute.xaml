<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bahdanau_153502.UI.Pages.AddOrUpdateTouristRoute"
             xmlns:models="clr-namespace:Bahdanau_153502.UI.ViewModels"
             xmlns:entities="clr-namespace:Bahdanau_153502.Domain.Entities;assembly=Bahdanau_153502.Domain"
             x:DataType="models:AddOrUpdateTouristRouteViewModel"
             Title="Add tourist route">
    <StackLayout Margin="10" Spacing="15">
        <VerticalStackLayout>
            <Label Text="Title"/>
            <Entry Text="{Binding RouteToUpsert.Title}" Placeholder="Title"/>
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Distance in km"/>
            <Entry Text="{Binding RouteToUpsert.DistanceInKm}" Placeholder="0"/>
        </VerticalStackLayout>

        <Button Text="Save" Command="{Binding AddOrUpdateTouristRouteCommand}"/>
    </StackLayout>
</ContentPage>